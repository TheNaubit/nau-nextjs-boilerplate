{
  "name": "nau-nextjs-boilerplate",
  "description": "This is a small Next.js 13 boilerplate that I like to use in my projects. It doesn't come with any UI framework/kit/whatever to allow you to setup whatever you prefer to use on each project (although it already comes with Tailwind ready to use, just in case).",
  "author": {
    "email": "al@nauverse.com",
    "name": "Al | @thenaubit",
    "url": "https://nauverse.com"
  },
  "bugs": {
    "url": "https://github.com/TheNaubit/nau-nextjs-boilerplate/issues"
  },
  "homepage": "https://github.com/TheNaubit/nau-nextjs-boilerplate/",
  "keywords": ["nextjs", "boilerplate", "approuter", "tailwind", "eslint"],
  "license": "MIT",
  "repository": {
    "type": "github",
    "url": "https://github.com/TheNaubit/nau-nextjs-boilerplate.git"
  },
  "version": "1.0.0",
  "private": true,
  "engines": {
    "node": ">=20"
  },
  "engineStrict": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "preview": "next build && next start",
    "typecheck": "tsc --noEmit",
    "format:write": "prettier --write \"**/*.{ts,tsx,mdx}\" --cache",
    "format:check": "prettier --check \"**/*.{ts,tsx,mdx}\" --cache",
    "commitlint:check": "commitlint --edit",
    "lintstaged:check": "lint-staged",
    "test:e2e": "playwright test"
  },
  "dependencies": {
    "@total-typescript/ts-reset": "0.5.1",
    "class-variance-authority": "0.7.0",
    "clsx": "2.0.0",
    "framer-motion": "10.16.4",
    "next": "13.4.19",
    "next-themes": "0.2.1",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "tailwind-merge": "1.14.0",
    "tailwindcss-animate": "1.0.7",
    "@playwright/test": "^1.38.0"
  },
  "devDependencies": {
    "@antfu/ni": "0.21.8",
    "@commitlint/config-conventional": "17.7.0",
    "@ianvs/prettier-plugin-sort-imports": "4.1.0",
    "@types/node": "20.6.2",
    "@types/react": "18.2.22",
    "@types/react-dom": "18.2.7",
    "@typescript-eslint/eslint-plugin": "6.7.2",
    "@typescript-eslint/parser": "6.7.2",
    "autoprefixer": "10.4.15",
    "commitlint": "17.7.1",
    "eslint": "8.49.0",
    "eslint-config-airbnb": "19.0.4",
    "eslint-config-next": "13.4.19",
    "eslint-config-prettier": "9.0.0",
    "eslint-plugin-jsx-a11y": "6.7.1",
    "eslint-plugin-prettier": "5.0.0",
    "eslint-plugin-react": "7.33.2",
    "eslint-plugin-react-hooks": "4.6.0",
    "eslint-plugin-security": "1.7.1",
    "eslint-plugin-sonarjs": "0.21.0",
    "eslint-plugin-tailwindcss": "3.13.0",
    "husky": "8.0.3",
    "lint-staged": "14.0.1",
    "postcss": "8.4.29",
    "prettier": "3.0.3",
    "tailwindcss": "3.3.3",
    "typescript": "5.2.2"
  },
  "commitlint": {
    "extends": "@commitlint/config-conventional"
  }
}
